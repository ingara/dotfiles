[user]
	name = Ingar Almklov
	email = ingara@gmail.com
[push]
	default = current
[pull]
  default = current
  rebase = true
[core]
  editor = nvim
  filemode = false
	excludesfile = /Users/ingaralmklov/.gitignore_global
  pager=less -x4
[color]
  ui = true
[alias]
  last = log -1 --stat
  cp = cherry-pick
  co = checkout
  cob = checkout -b
  cl = clone
  ci = commit
  cm = commit -m
  s = status
  st = status -sb
  br = branch
  d = diff
  dw = diff -w
  dc = diff --cached
  unstage = reset HEAD --
  lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  ec = config --global -e
  save = !git add -A && git commit -m 'SAVEPOINT'
  wip = commit -am "WIP"
  undo = reset HEAD~1 --mixed

    #Github Flow
  up = !git pull --rebase --prune $@ && git submodule update --init --recursive
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; }; f"
  bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
  wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
  alias = config --get-regexp ^alias\\.
  bup = !git bdone && git co - && git rebase master

[gui]
  diffopts = -w
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[diff]
	tool = p4mergetool
[merge]
	tool = p4mergetool
[commit]
	template = /Users/ingaralmklov/.stCommitMsg
[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$LOCAL $PWD/$REMOTE $PWD/$MERGED
[mergetool]
	keepBackup = false
[difftool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE
[rerere]
	enabled = true
